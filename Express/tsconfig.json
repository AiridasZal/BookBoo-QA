{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "strict": true,
      "paths": {
        "*": ["node_modules/*"]
      },
      "types": ["node", "jest"]
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"]
  }